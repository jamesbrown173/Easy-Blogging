<%- include("./partials/header.ejs") %>

<section class="blog__input">
  <div class="blog__input__container">
    <h2>What would you like to write today?</h2>

    <form action="/submit" method="POST">
      <!-- <label for="blogTitle">Blog Title</label><br> -->
      <input
        type="text"
        name="blogTitle"
        id="blogTitle"
        value="Type your blog title here"
        onfocus="this.value=''"
      /><br />
      <!-- <label for="blogContent">Blog main content</label><br> -->
      <textarea
        name="blogContent"
        id="blogContent"
        cols="30"
        rows="10"
        onfocus="this.value=''"
      >
Type your blog post here</textarea
      ><br />
      <!-- <label for="authorName">Author's Name</label><br> -->
      <input
        type="text"
        name="authorName"
        id="authorName"
        value="Type your name here"
        onfocus="this.value=''"
      /><br />
      <input class="submit" type="submit" value="Submit" /><br />
    </form>
  </div>
</section>

<section class="newPosts">
  <div class="newPost__container">
    <% posts.forEach(function(post) { %>
    <div class="newPost__item">
      <h1><%= post.blogTitle %></h1>
      <p><%= post.blogPostContent %></p>
      <p>
        This post was created on <%= post.dateCreated %> by <%= post.authorName
        %>
      </p>
      <br />
      <p>The post id = <%= post.id %></p>
      <div class="newPost__buttonsContainer">
        <form
          action="/delete/<%= post.id %>"
          method="POST"
          onsubmit="return confirm('Are ya sure ya wanna delete it bucko?');"
        >
          <input type="submit" value="Delete post" />
        </form>
        <form action="/edit/<%= post.id %>" method="EDIT">
          <input type="submit" value="Edit post" />
        </form>
      </div>
    </div>
    <% }); %>
  </div>
</section>

<%- include("./partials/footer.ejs") %>
